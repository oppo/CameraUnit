<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <shortcut
        android:shortcutId="shortcut_texture_view"
        android:enabled="true"
        android:icon="@mipmap/ic_launcher"
        android:shortcutLongLabel="@string/texture_view_as_preview"
        android:shortcutDisabledMessage="@string/texture_view_as_preview"
        android:shortcutShortLabel="@string/texture_view_as_preview">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="com.oplus.ocs.cameraunit.component.MainActivity"
            android:targetPackage="com.ocs.cameraunit">
            <extra android:name="view_type" android:value="texture_view"/>
        </intent>

        <categories
            android:name="android.shortcut.conversation"/>
    </shortcut>

    <shortcut
        android:shortcutId="shortcut_surface_texture"
        android:enabled="true"
        android:icon="@mipmap/ic_launcher"
