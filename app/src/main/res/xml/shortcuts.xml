        android:shortcutShortLabel="@string/surface_texture_as_preview">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="com.oplus.ocs.cameraunit.component.MainActivity"
            android:targetPackage="com.ocs.cameraunit">
            <extra android:name="view_type" android:value="surface_texture"/>
        </intent>

        <categories
            android:name="android.shortcut.conversation"/>
    </shortcut>

    <shortcut
        android:shortcutId="shortcut_image_reader"
        android:enabled="true"
        android:icon="@mipmap/ic_launcher"
        android:shortcutLongLabel="@string/image_reader_as_preview"
        android:shortcutDisabledMessage="@string/image_reader_as_preview"
        android:shortcutShortLabel="@string/image_reader_as_preview">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="com.oplus.ocs.cameraunit.component.MainActivity"
            android:targetPackage="com.ocs.cameraunit">
            <extra android:name="view_type" android:value="image_reader"/>
        </intent>

        <categories
            android:name="android.shortcut.conversation"/>
    </shortcut>
</shortcuts>
